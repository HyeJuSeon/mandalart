<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateActivity2"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_back_24"
            android:background="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="만다라트 생성"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="9dp"
            android:background="#ffffff"
            android:text="완료"
            android:textColor="#000000"
            android:textSize="18dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="34dp"
            android:text="칸 선택"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/center_view"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_above="@+id/center_view"
            android:layout_alignEnd="@+id/center_view"
            android:layout_centerInParent="true"
            android:layout_marginBottom="2dp"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_above="@+id/center_view"
            android:layout_toLeftOf="@+id/center_view"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_above="@+id/center_view"
            android:layout_toRightOf="@+id/center_view"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_alignBaseline="@+id/center_view"
            android:layout_toLeftOf="@+id/center_view"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_alignBaseline="@+id/center_view"
            android:layout_toRightOf="@+id/center_view"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_below="@+id/center_view"
            android:layout_toLeftOf="@+id/center_view"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_below="@+id/center_view"
            android:layout_alignEnd="@+id/center_view"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="#f2f2f5" />

        <TextView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="2dp"
            android:layout_below="@+id/center_view"
            android:layout_toRightOf="@+id/center_view"
            android:background="#f2f2f5" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            android:hint="해당 칸의 제목을 입력해주세요."
            android:textColorHint="#c3c6cc"
            android:backgroundTint="#f0f3f6"
            android:inputType="textNoSuggestions" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detailed_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세설명"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detailed_description"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="18dp"
            android:hint="해당 칸에 대한 설명을 입력해주세요."
            android:textColorHint="#c3c6cc"
            android:backgroundTint="#f0f3f6"
